<h1 class="welcomeUser">Welcome {{welcomeUsername}}!</h1>
<div class="row">
    <div class="leftcolumn">
        <div id="postColumn">
            {{#each allPosts}} {{> post }} {{/each}}
        </div>
        <a href="" id="fetchMorePosts">Get more posts</a>
        <p id="noMorePosts" hidden>No more posts!</p>
    </div>
    <div class="rightcolumn">
        <h2>Following:</h2>
        <ul>
        {{#each followingUsers}}
            <li><a href="/users/profile/{{this.[1]}}">{{this.[0]}}</a></li>
        {{/each}}
        </ul>
    </div>
</div>
<script src="/public/js/feed.js"></script>